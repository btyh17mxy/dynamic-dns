[Unit]
Description=dynamic_proxy_server Daemon
Wants=network.target
After=syslog.target network.target

[Service]
Type=forking
User=root
Group=root
WorkingDirectory=/home/mush/code
PIDFile=/var/run/dynamic-proxy-server.pid
ExecStart=/home/mush/dynamic-nginx-proxy/dynamic_proxy_server.py
StandardOutput=syslog
ExecStop=/bin/kill -15 $MAINPID
TimeoutStopSec=5

[Install]
WantedBy=multi-user.target
